<h1 class="center">BLOGERS</h1>
<div class="row center">
  <%= will_paginate%>
</div>
<div class="center row">
  <%@users.each do |user|%>
    <ul class="listing">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title"><%= link_to user.username, user_path(user) %></li>
        <li><small> <%= pluralize(user.articles.count, "article") if user.articles%> </small></li>
        <%if logged_in? and current_user.admin?%>
          <div class="article-actions">
            <%= link_to 'Delete user', user_path(user), method: :delete,
              data: {confirm: "Are you sure ypu want to delete this user and all their article?"}, 
              class: 'btn btn-large, btn-danger'%>
          </div>
        <%end%>
      </div>
    </ul>
  <%end%>
</div>
<div class="row center">
  <%= will_paginate%>
</div>
